##########################################
# STAGE 1 - Build project artifacts      #
##########################################

FROM node:22.18.0 AS builder
WORKDIR /bus-tracker
RUN npm install -g corepack@latest
RUN corepack enable

# Fetch dependencies
COPY pnpm-lock.yaml ./
RUN pnpm fetch

# Install dependencies
COPY libraries/contracts/ ./libraries/contracts/
COPY apps/client/ ./apps/client/
RUN pnpm install -r

# 2025-08-14: temp fix for @danielgtmn/umami-react@1.0.0
RUN sed -i \
  -e 's/"main": "\.\/dist\/index\.js",/"main": ".\/dist\/index.cjs",/' \
  -e 's/"module": "\.\/dist\/index\.mjs",/"module": ".\/dist\/index.js",/' \
  apps/client/node_modules/@danielgtmn/umami-react/package.json

# Inject build information
ARG BUILD_HASH
ENV VITE_BUILD_HASH=${BUILD_HASH}

ARG BUILD_TIMESTAMP
ENV VITE_BUILD_TIMESTAMP=${BUILD_TIMESTAMP}

# Sentry token for sourcemaps
ARG SENTRY_AUTH_TOKEN
ENV SENTRY_AUTH_TOKEN=${SENTRY_AUTH_TOKEN}

# Build client
RUN pnpm -r build

##########################################
# STAGE 2 - Run distribution app         #
##########################################

FROM nginx:1.29.0-alpine AS web
WORKDIR /usr/share/nginx/html

# Copy nginx configuration
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Copy build artifacts
COPY --from=builder /bus-tracker/apps/client/dist/ ./
